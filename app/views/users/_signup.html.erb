<div class="modal fade" id="signUpModal" tabindex="1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="instructions-title">Sign Up!</h4>
      </div>
      <div class="modal-body" id='signin-form'>
         <%= form_for User.new, url: users_path, method: :post do |u| %>
          <%= u.text_field :username, class:"form-control", placeholder:"Username" %>
          <%= u.text_field :email, class:"form-control", placeholder:"Email" %>
          <%= u.text_field :password, class:"form-control", type:"password", placeholder:"Password" %>
          <%= u.text_field :password_confirmation, class:"form-control", type:"password", placeholder:"Confirm Password" %><br>
      </div>
      <div class="modal-footer">
          <%= u.submit class:"btn btn-primary", :"data-dismiss"=>"modal" %>
        <% end %>
      </div>
    </div>
  </div>
</div>